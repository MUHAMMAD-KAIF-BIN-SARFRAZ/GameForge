@model GameForge.Models.ThreadReplyEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ThreadTopicReply</h4>
<hr />
@if (Model.CanEdit)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ThreadTopicReplyText" class="control-label"></label>
                    <input asp-for="ThreadTopicReplyText" class="form-control" />
                    <span asp-validation-for="ThreadTopicReplyText" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="ThreadTopicID" />
                <input type="hidden" asp-for="ThreadTopicReplyID" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}else{
    <div>
        <p>
            you can't edit your reply rn :/
        </p>
    </div>
}
<div>
    @Html.ActionLink("Back to Discussion","Details","ThreadTopic",new {id=Model.ThreadTopicID})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model GameForge.Models.QuestionEditViewModel

@{
    ViewData["Title"] = "Edit Question";
}

<h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

<div class="container">
    @if (!Model.CanEdit)
    {
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Your Question</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="QuestionID" />

                <!-- Title Field -->
                <div class="form-group mb-4">
                    <label asp-for="Title" class="form-label fs-5 fw-semibold text-secondary">Question Title:</label>
                    <input asp-for="Title" class="form-control border-primary"
                        placeholder="Enter your question title here" style="font-size: 1.1rem;">
                    <span asp-validation-for="Title" class="text-danger mt-1"></span>
                </div>

                <!-- Question Text Field -->
                <div class="form-group mb-4">
                    <label asp-for="QuestionText" class="form-label fs-5 fw-semibold text-secondary">Question Details:</label>
                    <textarea asp-for="QuestionText" class="form-control border-primary" rows="8"
                        placeholder="Provide more details for your question here"
                        style="resize: vertical; font-size: 1.1rem;"></textarea>
                    <span asp-validation-for="QuestionText" class="text-danger mt-1"></span>
                </div>

                <!-- Save Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-primary px-5">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
    }else{
        <p>you can't Edit the Question rn :/ </p>
    }

    <!-- Back to Question List Link -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Question List</a>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            margin: 0 auto;
            max-width: 700px;
            border-radius: 10px;
        }

        .form-control {
            box-shadow: none;
            border-width: 2px;
        }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
    </style>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

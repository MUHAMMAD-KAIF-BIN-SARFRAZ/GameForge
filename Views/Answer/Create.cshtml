@model GameForge.Models.AnswerCreateViewModel

@{
    ViewData["Title"] = "Create Answer";
}

<h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

<div class="container">
    @if (!Model.CanCreate)
    {
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Provide Your Answer</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <input type="hidden" asp-for="QuestionID" value="@Model.QuestionID"/>
                    <div class="form-group mb-4">
                        <label asp-for="AnswerText" class="form-label fs-5 fw-semibold text-secondary">Your Answer:</label>
                        <textarea asp-for="AnswerText" class="form-control border-primary" rows="6"
                        placeholder="Type your answer here..." style="font-size: 1.1rem;">
                        </textarea>
                        <span asp-validation-for="AnswerText" class="text-danger mt-1"></span>
                    </div>
                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-lg btn-primary px-5">Submit Answer</button>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <p>you can't create an answer rn :/ </p>
    }

    <!-- Back to Question List Link -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Question List</a>
    </div>
</div>

@section Styles {
    <style>
        body {
        background-color: #f8f9fa;
        }

        .card {
        margin: 0 auto;
        max-width: 800px;
        border-radius: 10px;
        }

        .form-control {
        box-shadow: none;
        border-width: 2px;
        resize:vertical;
        max-height: 600px;
        min-height: 400px;
        }

        .form-control:focus {
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
    </style>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
